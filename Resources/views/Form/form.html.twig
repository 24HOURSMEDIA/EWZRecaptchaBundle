{% block recaptcha_field %}
  {% if attr.options is defined %}
    <script type="text/javascript">
      var RecaptchaOptions = {{ attr.options|json_encode }}
    </script>
  {% endif %}
  <script src="{{ field.scriptUrl('challenge') }} ?>" type="text/javascript"></script>
  <noscript>
      <iframe src="{{ field.scriptUrl('noscript') }}" height="300" width="500" frameborder="0"></iframe><br/>
      <textarea name="recaptcha_challenge_field" rows="3" cols="40"></textarea>
      <input type="hidden" name="recaptcha_response_field" value="manual_challenge"/>
  </noscript>
{% endblock %}
