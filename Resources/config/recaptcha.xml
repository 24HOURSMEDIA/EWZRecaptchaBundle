<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="form.type.recaptcha.class">EWZ\Bundle\RecaptchaBundle\Form\Extension\Core\Type\RecaptchaType</parameter>
        <parameter key="recaptcha.validator.true.class">EWZ\Bundle\RecaptchaBundle\Validator\Constraints\TrueValidator</parameter>
    </parameters>

    <services>
        <service id="form.type.recaptcha" class="%form.type.recaptcha.class%">
            <tag name="form.type" alias="recaptcha" />
            <argument type="service" id="service_container" />
        </service>

        <service id="recaptcha.validator.true" class="%recaptcha.validator.true.class%">
            <tag name="validator.constraint_validator" alias="recaptcha.true" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
